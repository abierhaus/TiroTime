@page
@model TiroTime.Web.Pages.Clients.CreateModel
@{
    ViewData["Title"] = "Kunde erstellen";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="./Index">Kunden</a></li>
        <li class="breadcrumb-item active" aria-current="page">Neuer Kunde</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Neuen Kunden erstellen</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <h5 class="mb-3">Grundinformationen</h5>

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label">Kundenname *</label>
                        <input asp-for="Input.Name" class="form-control" placeholder="z.B. Musterfirma GmbH" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ContactPerson" class="form-label">Kontaktperson</label>
                        <input asp-for="Input.ContactPerson" class="form-control" placeholder="z.B. Max Mustermann" />
                        <span asp-validation-for="Input.ContactPerson" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Email" class="form-label">E-Mail-Adresse</label>
                            <input asp-for="Input.Email" class="form-control" placeholder="kunde@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">Telefonnummer</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="+49 123 456789" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Adresse</h5>

                    <div class="mb-3">
                        <label asp-for="Input.AddressStreet" class="form-label">Straße und Hausnummer</label>
                        <input asp-for="Input.AddressStreet" class="form-control" placeholder="Musterstraße 123" />
                        <span asp-validation-for="Input.AddressStreet" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.AddressPostalCode" class="form-label">Postleitzahl</label>
                            <input asp-for="Input.AddressPostalCode" class="form-control" placeholder="12345" />
                            <span asp-validation-for="Input.AddressPostalCode" class="text-danger"></span>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label asp-for="Input.AddressCity" class="form-label">Stadt</label>
                            <input asp-for="Input.AddressCity" class="form-control" placeholder="Berlin" />
                            <span asp-validation-for="Input.AddressCity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.AddressCountry" class="form-label">Land</label>
                        <input asp-for="Input.AddressCountry" class="form-control" placeholder="Deutschland" value="Deutschland" />
                        <span asp-validation-for="Input.AddressCountry" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Zusätzliche Informationen</h5>

                    <div class="mb-3">
                        <label asp-for="Input.TaxId" class="form-label">Steuernummer / USt-IdNr.</label>
                        <input asp-for="Input.TaxId" class="form-control" placeholder="DE123456789" />
                        <span asp-validation-for="Input.TaxId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Notes" class="form-label">Notizen</label>
                        <textarea asp-for="Input.Notes" class="form-control" rows="4" placeholder="Optionale Notizen zum Kunden..."></textarea>
                        <span asp-validation-for="Input.Notes" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
                            </svg>
                            Kunde erstellen
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Abbrechen</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
