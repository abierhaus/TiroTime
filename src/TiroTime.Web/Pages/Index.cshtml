@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-speedometer2 text-primary me-2" viewBox="0 0 16 16" style="vertical-align: text-bottom;">
                <path d="M8 4a.5.5 0 0 1 .5.5V6a.5.5 0 0 1-1 0V4.5A.5.5 0 0 1 8 4M3.732 5.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707M2 10a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 10m9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5m.754-4.246a.39.39 0 0 0-.527-.02L7.547 9.31a.91.91 0 1 0 1.302 1.258l3.434-4.297a.39.39 0 0 0-.029-.518z"/>
                <path fill-rule="evenodd" d="M0 10a8 8 0 1 1 15.547 2.661c-.442 1.253-1.845 1.602-2.932 1.25C11.309 13.488 9.475 13 8 13c-1.474 0-3.31.488-4.615.911-1.087.352-2.49.003-2.932-1.25A8 8 0 0 1 0 10m8-7a7 7 0 0 0-6.603 9.329c.203.575.923.876 1.68.63C4.397 12.533 6.358 12 8 12s3.604.532 4.923.96c.757.245 1.477-.056 1.68-.631A7 7 0 0 0 8 3"/>
            </svg>
            Dashboard
        </h1>
        <p class="text-muted">Willkommen bei TiroTime</p>
    </div>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    @if (Model.Statistics != null)
    {
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card bg-light-blue">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Heute</h6>
                        <h2 class="card-title mb-0">@string.Format("{0:hh\\:mm}", Model.Statistics.TodayTotal)</h2>
                        <small class="text-muted">@Model.Statistics.TodayEntryCount Einträge</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card bg-light-blue">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Diese Woche</h6>
                        <h2 class="card-title mb-0">@string.Format("{0:hh\\:mm}", Model.Statistics.WeekTotal)</h2>
                        <small class="text-muted">@Model.Statistics.WeekEntryCount Einträge</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card bg-light-blue">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Dieser Monat</h6>
                        <h2 class="card-title mb-0">@string.Format("{0:hh\\:mm}", Model.Statistics.MonthTotal)</h2>
                        <small class="text-muted">@Model.Statistics.MonthEntryCount Einträge</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-stopwatch text-primary mb-3" viewBox="0 0 16 16">
                        <path d="M8.5 5.6a.5.5 0 1 0-1 0v2.9h-3a.5.5 0 0 0 0 1H8a.5.5 0 0 0 .5-.5z"/>
                        <path d="M6.5 1A.5.5 0 0 1 7 .5h2a.5.5 0 0 1 0 1v.57c1.36.196 2.594.78 3.584 1.64l.012-.013.354-.354-.354-.353a.5.5 0 0 1 .707-.708l1.414 1.415a.5.5 0 1 1-.707.707l-.353-.354-.354.354-.013.012A7 7 0 1 1 7 2.071V1.5a.5.5 0 0 1-.5-.5M8 3a6 6 0 1 0 .001 12A6 6 0 0 0 8 3"/>
                    </svg>
                    <h5 class="card-title">Zeiterfassung</h5>
                    <p class="card-text">Erfassen Sie Ihre Arbeitszeit mit dem Timer oder manuell</p>
                    <a asp-page="/TimeTracking/Index" class="btn btn-primary">Zur Zeiterfassung</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-folder text-primary mb-3" viewBox="0 0 16 16">
                        <path d="M.54 3.87.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a2 2 0 0 1 .342-1.31zM2.19 4a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4zm4.69-1.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139q.323-.119.684-.12h5.396z"/>
                    </svg>
                    <h5 class="card-title">Projekte</h5>
                    <p class="card-text">Verwalten Sie Ihre Projekte und Kunden</p>
                    <a asp-page="/Projects/Index" class="btn btn-primary">Zu den Projekten</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-people text-primary mb-3" viewBox="0 0 16 16">
                        <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1zm-7.978-1L7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002-.014.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0M6.936 9.28a6 6 0 0 0-1.23-.247A7 7 0 0 0 5 9c-4 0-5 3-5 4q0 1 1 1h4.216A2.24 2.24 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816M4.92 10A5.5 5.5 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4"/>
                    </svg>
                    <h5 class="card-title">Kunden</h5>
                    <p class="card-text">Verwalten Sie Ihre Kundenkontakte</p>
                    <a asp-page="/Clients/Index" class="btn btn-primary">Zu den Kunden</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body text-center p-5">
                    <h2>Willkommen bei TiroTime</h2>
                    <p class="lead">Ihre professionelle Zeiterfassungslösung</p>
                    <p class="text-muted">Melden Sie sich an, um Ihre Arbeitszeit zu erfassen und Ihre Projekte zu verwalten.</p>
                    <div class="mt-4">
                        <a asp-page="/Account/Login" class="btn btn-primary btn-lg me-2">Anmelden</a>
                        <a asp-page="/Account/Register" class="btn btn-outline-primary btn-lg">Registrieren</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
