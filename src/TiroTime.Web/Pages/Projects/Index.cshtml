@page
@model TiroTime.Web.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projekte";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-folder text-primary me-2" viewBox="0 0 16 16" style="vertical-align: text-bottom;">
            <path d="M.54 3.87.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a2 2 0 0 1 .342-1.31zM2.19 4a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4zm4.69-1.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139q.323-.119.684-.12h5.396z"/>
        </svg>
        Projekte
    </h1>
    <a asp-page="./Create" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
        </svg>
        Neues Projekt
    </a>
</div>

@if (Model.Projects.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Projekt</th>
                            <th>Kunde</th>
                            <th>Stundensatz</th>
                            <th>Budget</th>
                            <th>Zeitraum</th>
                            <th>Status</th>
                            <th class="text-end">Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model.Projects)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(project.ColorCode))
                                    {
                                        <span class="badge me-2" style="background-color: @project.ColorCode">&nbsp;&nbsp;&nbsp;</span>
                                    }
                                    <strong>@project.Name</strong>
                                </td>
                                <td>@project.ClientName</td>
                                <td>@project.HourlyRate.ToString("N2") @project.HourlyRateCurrency</td>
                                <td>
                                    @if (project.Budget.HasValue)
                                    {
                                        @project.Budget.Value.ToString("N2") <text>@project.BudgetCurrency</text>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (project.StartDate.HasValue && project.EndDate.HasValue)
                                    {
                                        <small>@project.StartDate.Value.ToString("dd.MM.yyyy") - @project.EndDate.Value.ToString("dd.MM.yyyy")</small>
                                    }
                                    else if (project.StartDate.HasValue)
                                    {
                                        <small>ab @project.StartDate.Value.ToString("dd.MM.yyyy")</small>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (project.IsActive)
                                    {
                                        <span class="badge bg-success">Aktiv</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inaktiv</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-page="./Edit" asp-route-id="@project.Id" class="btn btn-outline-primary" title="Bearbeiten">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                                            </svg>
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@project.Id" class="btn btn-outline-secondary" title="Details">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <p class="mb-0">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-info-circle mb-3" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533z"/>
                <circle cx="8" cy="4.5" r="1"/>
            </svg>
        </p>
        <h5>Keine Projekte vorhanden</h5>
        <p class="text-muted">Legen Sie Ihr erstes Projekt an, um zu beginnen.</p>
        <a asp-page="./Create" class="btn btn-primary">Jetzt Projekt erstellen</a>
    </div>
}
