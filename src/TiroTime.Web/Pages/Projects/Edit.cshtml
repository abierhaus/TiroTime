@page
@model TiroTime.Web.Pages.Projects.EditModel
@{
    ViewData["Title"] = "Projekt bearbeiten";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="./Index">Projekte</a></li>
        <li class="breadcrumb-item active" aria-current="page">Projekt bearbeiten</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Projekt bearbeiten</h4>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Aktiv</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inaktiv</span>
                    }
                </div>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <h5 class="mb-3">Grundinformationen</h5>

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label">Projektname *</label>
                        <input asp-for="Input.Name" class="form-control" placeholder="z.B. Website-Entwicklung" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kunde</label>
                        <input type="text" class="form-control" value="@Model.ClientName" disabled />
                        <small class="form-text text-muted">Der Kunde kann nach der Erstellung nicht mehr geändert werden</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Beschreibung</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Optionale Projektbeschreibung..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Finanzielles</h5>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Input.HourlyRate" class="form-label">Stundensatz *</label>
                            <input asp-for="Input.HourlyRate" class="form-control" type="number" step="0.01" min="0" placeholder="85.00" />
                            <span asp-validation-for="Input.HourlyRate" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.HourlyRateCurrency" class="form-label">Währung *</label>
                            <select asp-for="Input.HourlyRateCurrency" class="form-select">
                                <option value="EUR">EUR</option>
                                <option value="USD">USD</option>
                                <option value="GBP">GBP</option>
                                <option value="CHF">CHF</option>
                            </select>
                            <span asp-validation-for="Input.HourlyRateCurrency" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Input.Budget" class="form-label">Budget (optional)</label>
                            <input asp-for="Input.Budget" class="form-control" type="number" step="0.01" min="0" placeholder="10000.00" id="budgetInput" />
                            <span asp-validation-for="Input.Budget" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.BudgetCurrency" class="form-label">Währung</label>
                            <select asp-for="Input.BudgetCurrency" class="form-select" id="budgetCurrencySelect">
                                <option value="">-- Wählen --</option>
                                <option value="EUR">EUR</option>
                                <option value="USD">USD</option>
                                <option value="GBP">GBP</option>
                                <option value="CHF">CHF</option>
                            </select>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Zeitraum und Design</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.StartDate" class="form-label">Startdatum</label>
                            <input asp-for="Input.StartDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.EndDate" class="form-label">Enddatum</label>
                            <input asp-for="Input.EndDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ColorCode" class="form-label">Projektfarbe</label>
                        <input asp-for="Input.ColorCode" class="form-control" type="color" />
                        <small class="form-text text-muted">Wählen Sie eine Farbe zur visuellen Kennzeichnung des Projekts</small>
                        <span asp-validation-for="Input.ColorCode" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
                            </svg>
                            Änderungen speichern
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Abbrechen</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
