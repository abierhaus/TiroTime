@page
@model TiroTime.Web.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Berichte & Export";
}

<div class="row mb-4">
    <div class="col-12">
        <h1>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-file-earmark-bar-graph text-primary me-2" viewBox="0 0 16 16" style="vertical-align: text-bottom;">
                <path d="M10 13.5a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-6a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5zm-2.5.5a.5.5 0 0 1-.5-.5v-4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5zm-3 0a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5z"/>
                <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2M9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z"/>
            </svg>
            Berichte & Export
        </h1>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">Filter</h5>
        <form method="post" asp-page-handler="Generate">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="startDate" class="form-label">Von *</label>
                    <input type="date" class="form-control" id="startDate" asp-for="StartDate" required />
                </div>
                <div class="col-md-3">
                    <label for="endDate" class="form-label">Bis *</label>
                    <input type="date" class="form-control" id="endDate" asp-for="EndDate" required />
                </div>
                <div class="col-md-3">
                    <label for="clientSelect" class="form-label">Kunde (optional)</label>
                    <select class="form-select" id="clientSelect" asp-for="ClientId">
                        <option value="">-- Alle Kunden --</option>
                        @foreach (var client in Model.Clients)
                        {
                            <option value="@client.Id">@client.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="projectSelect" class="form-label">Projekt (optional)</label>
                    <select class="form-select" id="projectSelect" asp-for="ProjectId">
                        <option value="">-- Alle Projekte --</option>
                        @foreach (var project in Model.Projects)
                        {
                            <option value="@project.Id">@project.Name</option>
                        }
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                        Bericht erstellen
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Summary != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Zusammenfassung</h5>
                <div>
                    <form method="post" asp-page-handler="ExportCsv" class="d-inline">
                        <input type="hidden" asp-for="StartDate" />
                        <input type="hidden" asp-for="EndDate" />
                        <input type="hidden" asp-for="ProjectId" />
                        <input type="hidden" asp-for="ClientId" />
                        <button type="submit" class="btn btn-outline-success btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filetype-csv" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M14 4.5V14a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V4.5h-2A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v9H2V2a2 2 0 0 1 2-2h5.5zM3.517 14.841a1.13 1.13 0 0 0 .401.823q.195.162.478.252.284.091.665.091.507 0 .859-.158.354-.158.539-.44.187-.284.187-.656 0-.336-.134-.56a1 1 0 0 0-.375-.357 2 2 0 0 0-.566-.21l-.621-.144a1 1 0 0 1-.404-.176.37.37 0 0 1-.144-.299q0-.234.185-.384.188-.152.512-.152.214 0 .37.068a.6.6 0 0 1 .246.181.56.56 0 0 1 .12.258h.75a1.1 1.1 0 0 0-.2-.566 1.2 1.2 0 0 0-.5-.41 1.8 1.8 0 0 0-.78-.152q-.439 0-.776.15-.337.149-.527.421-.19.273-.19.639 0 .302.122.524.124.223.352.367.228.143.539.213l.618.144q.31.073.463.193a.39.39 0 0 1 .152.326.5.5 0 0 1-.085.29.56.56 0 0 1-.255.193q-.167.07-.413.07-.175 0-.32-.04a.8.8 0 0 1-.248-.115.58.58 0 0 1-.255-.384zM.806 13.693q0-.373.102-.633a.87.87 0 0 1 .302-.399.8.8 0 0 1 .475-.137q.225 0 .398.097a.7.7 0 0 1 .272.26.85.85 0 0 1 .12.381h.765v-.072a1.33 1.33 0 0 0-.466-.964 1.4 1.4 0 0 0-.489-.272 1.8 1.8 0 0 0-.606-.097q-.534 0-.911.223-.375.222-.572.632-.195.41-.196.979v.498q0 .568.193.976.197.407.572.626.375.217.914.217.439 0 .785-.164t.55-.454a1.27 1.27 0 0 0 .226-.674v-.076h-.764a.8.8 0 0 1-.118.363.7.7 0 0 1-.272.25.9.9 0 0 1-.401.087.85.85 0 0 1-.478-.132.83.83 0 0 1-.299-.392 1.7 1.7 0 0 1-.102-.627zm8.239 2.238h-.953l-1.338-3.999h.917l.896 3.138h.038l.888-3.138h.879z"/>
                            </svg>
                            CSV
                        </button>
                    </form>
                    <form method="post" asp-page-handler="ExportExcel" class="d-inline ms-2">
                        <input type="hidden" asp-for="StartDate" />
                        <input type="hidden" asp-for="EndDate" />
                        <input type="hidden" asp-for="ProjectId" />
                        <input type="hidden" asp-for="ClientId" />
                        <button type="submit" class="btn btn-outline-success btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-excel" viewBox="0 0 16 16">
                                <path d="M5.884 6.68a.5.5 0 1 0-.768.64L7.349 10l-2.233 2.68a.5.5 0 0 0 .768.64L8 10.781l2.116 2.54a.5.5 0 0 0 .768-.641L8.651 10l2.233-2.68a.5.5 0 0 0-.768-.64L8 9.219l-2.116-2.54z"/>
                                <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2M9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z"/>
                            </svg>
                            Excel
                        </button>
                    </form>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1"><strong>Zeitraum:</strong> @Model.Summary.StartDate.ToString("dd.MM.yyyy") - @Model.Summary.EndDate.ToString("dd.MM.yyyy")</p>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="text-center p-3 bg-light rounded">
                        <h3 class="text-primary mb-0">@Model.Summary.TotalEntries</h3>
                        <small class="text-muted">Einträge</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-3 bg-light rounded">
                        <h3 class="text-primary mb-0">@Model.Summary.TotalDuration.ToString(@"hh\:mm")</h3>
                        <small class="text-muted">Stunden</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-3 bg-light rounded">
                        <h3 class="text-primary mb-0">@Model.Summary.TotalAmount.ToString("N2")</h3>
                        <small class="text-muted">Betrag</small>
                    </div>
                </div>
            </div>

            @if (Model.Summary.ProjectSummaries.Any())
            {
                <h6 class="mt-4 mb-3">Nach Projekt</h6>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Projekt</th>
                                <th>Kunde</th>
                                <th class="text-end">Einträge</th>
                                <th class="text-end">Stunden</th>
                                <th class="text-end">Betrag</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model.Summary.ProjectSummaries)
                            {
                                <tr>
                                    <td>@project.ProjectName</td>
                                    <td>@project.ClientName</td>
                                    <td class="text-end">@project.EntryCount</td>
                                    <td class="text-end">@project.TotalDuration.ToString(@"hh\:mm")</td>
                                    <td class="text-end">@project.TotalAmount.ToString("N2") @project.Currency</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    @if (Model.Entries.Any())
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Detaillierte Zeiteinträge</h5>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Datum</th>
                                <th>Projekt</th>
                                <th>Kunde</th>
                                <th>Beschreibung</th>
                                <th>Von</th>
                                <th>Bis</th>
                                <th class="text-end">Dauer</th>
                                <th class="text-end">Betrag</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.Entries)
                            {
                                <tr>
                                    <td>@entry.Date.ToString("dd.MM.yyyy")</td>
                                    <td>@entry.ProjectName</td>
                                    <td>@entry.ClientName</td>
                                    <td>@(entry.Description ?? "-")</td>
                                    <td>@entry.StartTime.ToString(@"hh\:mm")</td>
                                    <td>@entry.EndTime.ToString(@"hh\:mm")</td>
                                    <td class="text-end">@entry.Duration.ToString(@"hh\:mm")</td>
                                    <td class="text-end">@entry.TotalAmount.ToString("N2") @entry.Currency</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle me-2" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533z"/>
            <path d="M9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
        </svg>
        Wählen Sie einen Zeitraum aus und klicken Sie auf "Bericht erstellen", um Ihre Zeiteinträge anzuzeigen.
    </div>
}
