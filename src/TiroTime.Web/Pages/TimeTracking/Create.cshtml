@page
@model TiroTime.Web.Pages.TimeTracking.CreateModel
@{
    ViewData["Title"] = "Manueller Zeiteintrag";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="./Index">Zeiterfassung</a></li>
        <li class="breadcrumb-item active" aria-current="page">Manueller Eintrag</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Manuellen Zeiteintrag erstellen</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.ProjectId" class="form-label">Projekt *</label>
                        <select asp-for="Input.ProjectId" asp-items="Model.ProjectSelectList" class="form-select">
                            <option value="">-- Projekt ausw채hlen --</option>
                        </select>
                        <span asp-validation-for="Input.ProjectId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Date" class="form-label">Datum *</label>
                            <input asp-for="Input.Date" class="form-control" type="date" />
                            <span asp-validation-for="Input.Date" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.StartTime" class="form-label">Startzeit *</label>
                            <input asp-for="Input.StartTime" class="form-control" type="time" />
                            <span asp-validation-for="Input.StartTime" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.EndTime" class="form-label">Endzeit *</label>
                            <input asp-for="Input.EndTime" class="form-control" type="time" />
                            <span asp-validation-for="Input.EndTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Beschreibung</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Was haben Sie gemacht?"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
                            </svg>
                            Eintrag erstellen
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Abbrechen</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle text-primary" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533z"/>
                        <circle cx="8" cy="4.5" r="1"/>
                    </svg>
                    Hinweis
                </h5>
                <p class="card-text">
                    Erstellen Sie hier manuelle Zeiteintr채ge f체r vergangene Arbeitszeiten.
                    F체r laufende Zeiterfassung verwenden Sie bitte den Timer auf der Hauptseite.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
